<%= form_for @board, html: { multipart: true } do |f| %>

    <% if @board.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>
          <ul>
            <% @board.errors.full_messages.each do |message| %>
               <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field"  >
      <%= f.label :longitude, style: 'display:none'%><br>
      <%= f.text_field :longitude, style: 'display:none'  %>
    </div>

    <div class="field">
      <%= f.label :latitude, style: 'display:none' %><br>
      <%= f.text_field :latitude, style: 'display:none' %>
    </div> 

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :"Board Details"  %><br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :"Price $:" %><br>
      <%= f.text_field :price %>
    </div>    

	<div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>    

    <div class="actions">
      <br>
      <%= f.submit %>
    </div>

<% end %>
